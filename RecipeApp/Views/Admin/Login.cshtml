@{
    ViewData["Title"] = "Login Page";
}

<section id="admin-login">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-2"></div>
            <div class="col-lg-6 col-md-8 login-box">
                <div class="col-lg-12 login-title">
                    ADMIN PANEL
                </div>

                <div class="col-lg-12 login-form">
                    <div class="col-lg-12 login-form">
                        <form>
                            <div class="form-group">
                                <label class="form-control-label">USERNAME</label>
                                <input id="username" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">PASSWORD</label>
                                <input id="password" type="password" class="form-control" i>
                            </div>

                            <div class="col-lg-12 loginbttm">
                                <div id="login-info" class="col-lg-6 login-btm login-text">

                                </div>
                                <div class="login-btm login-button">
                                    <button id="login_btn" type="submit" class="btn btn-outline-primary" data-request-url="@Url.Action("Login", "Admin")">LOGIN</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-3 col-md-2"></div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="~/js/login.js"></script>
}