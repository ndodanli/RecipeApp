@{
    ViewData["Title"] = "Categories Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<button id="add-category-button">Add category</button>

<div id="categories-table">
</div>

<div id="update-category-modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update category</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form id="update-category-form">
                <div class="modal-body">
                    <label for="name">Category Name</label>
                    <input class="form-control mb-4" name="name" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button id="update-save-button" type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="add-category-modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add category</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form id="add-category-form">
                <div class="modal-body">
                    <label for="name">Category Name</label>
                    <input class="form-control mb-4" name="name" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button id="add-save-button" type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/categories.js"></script>
}
