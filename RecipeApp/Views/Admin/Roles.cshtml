@{
    ViewData["Title"] = "Roles Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<button id="add-role-button">Add Role</button>

<div id="roles-table" class="container-fluid px-4">
</div>

<div id="update-role-modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Role</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form id="update-role-form">
                <div class="modal-body">
                    <div>Current permissions the role has:</div>
                    <div class="fw-bold text-wrap text-break text-success" id="role-permissions" name="role-permissions"></div>
                    <label for="role-permissions-input" >Add in <i class="text-break text-primary text-wrap">ControllerName1.MethodName1,ControllerName2.MethodName2,ControllerName3.MethodName3</i> format.</label>
                    <input class="form-control mb-4" id="role-permission-input" name="permissions" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button id="update-save-button" type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="add-role-modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Role</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form id="add-role-form">
                <div class="modal-body">
                    <label for="add-role-name-input">Role name</label>
                    <input class="form-control mb-4" id="add-role-name-input" name="name" />
                    <label for="add-role-permissions-input">Role permissions</label>
                    <label for="role-permissions-input">Add in <i class="text-break text-primary text-wrap">ControllerName1.MethodName1,ControllerName2.MethodName2,ControllerName3.MethodName3</i> format.</label>
                    <input class="form-control mb-4" id="add-role-permissions-input" name="permissions" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button id="add-save-button" type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/roles.js"></script>
}